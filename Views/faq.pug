extends layout

block layout-content
  body
    h1 Frequently Asked Questions!

    .faq-container
      each faq in faqList
        .faq-item
          .question Q: #{faq.question}
          .answer A: #{faq.answer}
          if user && user.role === 'admin'
            a.btn-edit(href=`/edit-faq/${faq.id}`) Edit
            form(action=`/delete-faq/${faq.id}`, method="POST" onsubmit="return confirm('Are you sure you want to delete this FAQ item?');")
              button.btn-delete(type="submit") Delete

      style.
        @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,100&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Raleway&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Tilt+Prism&display=swap');

        h1 {
          text-align: center;
          margin-bottom: 20px;
          color: black;
          font-family: 'Tilt Prism', cursive;
          font-size: 35px;
        }

        .faq-container {
          display: flex;
          flex-direction: column;
          align-items: center;
        }

        .faq-item {
          margin-bottom: 35px;
          background-color: aliceblue;
          width: 50%;
        }

        .question {
          font-family: 'Raleway', sans-serif;
          font-weight: bold;
          font-size: 19px;
          padding: 5px;
          color: black;
          border: solid 2px black;
        }

        .answer {
          font-family: 'Montserrat', sans-serif;
          font-size: 16px;
          margin-top: 5px;
          padding: 5px;
          color: black;
        }

        .btn-edit {
          display: inline-block;
          padding: 5px 10px;
          background-color: #4CAF50;
          color: white;
          text-decoration: none;
          border-radius: 4px;
        }

        .btn-edit:hover {
          background-color: #45a049;
        }

        .btn-delete {
          padding: 5px 10px;
          background-color: #f44336;
          color: white;
          border: none;
          border-radius: 4px;
          cursor: pointer;
        }

        .btn-delete:hover {
          background-color: #d32f2f;
        }

        body {
          background-color: rgb(254, 191, 0);
          margin: 0;
        }