doctype html
html
  head
    title Admin Login
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
      }
      
      h1 {
        text-align: center;
        color: #333;
      }
      
      form {
        max-width: 300px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      
      label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
      }
      
      input[type="text"],
      input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      
      input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: green;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      
      input[type="submit"]:hover {
        background-color: #45a049;
      }
      
      .error-message {
        color: red;
        margin-top: 10px;
      }
      
      .add-faq-form {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      
      .add-faq-form label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
      }
      
      .add-faq-form input[type="text"],
      .add-faq-form textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      
      .add-faq-form textarea {
        height: 100px;
      }
      
      .add-faq-form input[type="submit"] {
        width: auto;
        margin-top: 10px;
      }

      .logout-button input{
        width: 100%;
        padding: 10px;
        background-color: red;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;

      }
  body
    h1 Admin Login
    form(action="/login", method="POST")
      label(for="username") Username:
      input(type="text", name="username")
      br
      label(for="password") Password:
      input(type="password", name="password")
      br
      input(type="submit", value="Login")

  .logout-button
    form(action="/logout", method="POST")
      input(type="submit", value="Logout")
